<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    card_view:cardCornerRadius="20dp"
    card_view:cardElevation="6dp"
    card_view:contentPadding="0dp"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">


        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/item_image_panic"
            android:layout_width="40dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="-1dp"
            android:layout_marginEnd="16dp"
            android:layout_marginRight="156dp"
            />


        <TextView
            android:id="@+id/ButtonPanic"
            style="@style/text_view_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/item_image_panic"
            android:layout_toRightOf="@+id/item_image_panic"
            android:text="Alerta Boton de panico"
            android:textSize="20dp"
            android:textStyle="bold"

            />

        <ImageView
            android:id="@+id/imageViewStatus"
            android:layout_width="28dp"
            android:layout_height="25dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/ic_status_attended" />



        <TextView
            android:id="@+id/textViewIdSosIncident"
            style="@style/text_view_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/ButtonPanic"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@+id/item_image_panic"
            android:layout_toRightOf="@+id/item_image_panic"
            android:text="Id"
            android:textSize="14dp"
            android:textStyle="bold"

            />


        <TextView
            android:id="@+id/textViewInformation"
            style="@style/text_view_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewIdSosIncident"
            android:layout_toEndOf="@+id/item_image_panic"
            android:layout_toRightOf="@+id/item_image_panic"
            android:text="Nombre"
            android:textSize="14dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/textLocation"
            style="@style/text_view_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewInformation"
            android:layout_toEndOf="@+id/item_image_panic"
            android:layout_toRightOf="@+id/item_image_panic"
            android:text="ubicacion"
            android:textSize="14dp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/textStatus"
            style="@style/text_view_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textLocation"
            android:layout_toEndOf="@+id/item_image_panic"
            android:layout_toRightOf="@+id/item_image_panic"
            android:text="Status"
            android:textSize="14dp"
            android:textStyle="bold"

            />



    </RelativeLayout>
    
    

</androidx.cardview.widget.CardView>