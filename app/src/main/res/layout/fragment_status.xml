<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.send_incidents.StatusFragment">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="Denuncia virtual"
            android:textStyle="bold"
            style="@style/text_color_login"
            android:textSize="30dp"
            android:layout_gravity="center"
            />


        <EditText
            android:id="@+id/NameIncident"
            style="@style/edit_text_login"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="32dp"
            android:drawableStart="@drawable/ic_baseline_person"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:drawablePadding="12dp"
            android:hint="Tipo de incidente"
            android:inputType="textPersonName"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            />




        <EditText
            android:id="@+id/Name"
            style="@style/edit_text_login"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="32dp"
            android:drawableStart="@drawable/ic_baseline_person"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:drawablePadding="12dp"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            />

        <EditText
            android:id="@+id/LastName"
            style="@style/edit_text_login"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="32dp"
            android:drawableStart="@drawable/ic_baseline_person"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:drawablePadding="12dp"
            android:hint="Apellidos"
            android:inputType="textPersonName"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            />

        <EditText
            android:id="@+id/Email"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="44dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            android:drawablePadding="12dp"
            style="@style/edit_text_login"
            android:inputType="textPersonName"
            android:layout_gravity="center"
            android:drawableStart="@drawable/ic_baseline_email"
            android:hint="Correo electrÃ³nico"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            />


        <EditText
            android:id="@+id/Phone"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:layout_marginTop="32dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:ems="10"
            style="@style/edit_text_login"
            android:drawablePadding="12dp"
            android:inputType="textPersonName"
            android:drawableStart="@drawable/ic_baseline_phone"
            android:layout_gravity="center"
            android:hint="Numero de telefono"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            />


        <androidx.cardview.widget.CardView
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginTop="15dp"
            android:background="@drawable/edit_text_day"
            card_view:cardCornerRadius="20dp"
            >
        <EditText
            android:id="@+id/campo_6"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@null"
            android:gravity="top|start"
            android:hint="Comentarios"
            android:lines="10"
            android:padding="16dp"
            style="@style/edit_text_login"

             />

        </androidx.cardview.widget.CardView>


        <Button
            android:id="@+id/RegisterData"
            style="@style/Button_style_login"
            android:layout_width="313dp"
            android:layout_height="62dp"
            android:layout_gravity="center|bottom"
            android:layout_marginTop="240px"
            android:layout_marginBottom="80px"
            android:text="Enviar"
            android:textColor="#ffff"
            android:textSize="20dp" />



    </LinearLayout>







</ScrollView>