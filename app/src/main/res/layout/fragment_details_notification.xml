<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Notificactions.details.DetailsNotification"
    tools:ignore="SpeakableTextPresentCheck">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >


            <ProgressBar
                android:id="@+id/progressBarNotifications"

                style="?android:attr/progressBarStyle"
                android:layout_width="87dp"
                android:layout_height="73dp"
                android:visibility="gone"
                android:layout_marginTop="310dp"
                android:layout_gravity="center"
                 />

            <LinearLayout


                android:id="@+id/visibilityNotifications"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:visibility="visible"
                >


        <ImageView
            android:id="@+id/imageViewNotification"
            android:layout_width="match_parent"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            android:layout_height="300dp"
            android:layout_marginTop="1dp"
            android:src="@mipmap/ic_launcher_round" />



        <TextView


            android:id="@+id/textViewTitleNotification"
            style="@style/text_view_details_notification"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="40dp"
            android:text="pago de apoyo a adultos mayores" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            >


            <TextView

                android:id="@+id/textDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                style="@style/text_view_details_notification"
                android:gravity="center"
                android:textStyle="bold"
                android:textSize="15dp"
                android:text="Fecha de\n publicacion" />

            <TextView
                android:id="@+id/textHour"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="15dp"
                style="@style/text_view_details_notification"
                android:textStyle="bold"
                android:text="Hora de\n publicacion" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:orientation="horizontal"
            >


            <TextView
                android:id="@+id/textViewDateNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:textSize="16dp"
                android:text="24/01/2021" />

            <TextView
                android:id="@+id/textViewHourNotification"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"

                android:layout_weight="1"
                android:textSize="16dp"
                android:text="23:05 p. m." />
        </LinearLayout>


        <TextView
            android:id="@+id/textViewTypeNotification"
            android:layout_marginTop="22dp"
            android:layout_marginStart="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17dp"
            android:textStyle="bold|italic"
            android:text="Noticia informativa" />



        <TextView
            android:id="@+id/textViewDescriptionNotification"
            android:layout_marginTop="5dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            style="@style/text_view_details_notification"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:justificationMode="inter_word"
            android:text="Como se mencionó en títulos anteriores, los encabezados de sección se alinean con respecto a una imagen,
y al situarse en la parte superior de la pantalla guardan especial relevancia por ser una zona de atención
visual.
En la selección de las imágenes para dichos encabezados de sección se procuró que sus representaciones
estuvieran relacionadas con los tipos de contenidos de su sección. En consecuencia, aunque en mayor o
menor nivel, son recursos visuales con un valor retórico y semiótico."
            android:layout_marginBottom="20dp"
            />


    </LinearLayout>

        </LinearLayout>




</ScrollView>