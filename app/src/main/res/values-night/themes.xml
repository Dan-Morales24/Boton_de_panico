<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BotonDePanico" parent="Theme.AppCompat.DayNight">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#282727</item>
        <item name="colorPrimaryVariant">@color/blacknight</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="backgroud_login" parent="Theme.BotonDePanico.NoActionBar">
        <item name="android:background">@color/blacknight</item>
    </style>

    <style name="edit_text_login" parent="Theme.BotonDePanico.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableStart"></item>
        <item name="android:textColorHint">#9B9B9B</item>
        <item name="android:background">@drawable/edit_text_day</item>
    </style>


    <style name="text_view_login" parent="Theme.BotonDePanico.NoActionBar">
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="edit_text_password" parent="Theme.BotonDePanico.NoActionBar">
        <item name="android:textColor">@color/black</item>
        <item name="android:drawableStart"></item>
        <item name="android:textColorHint">#9B9B9B</item>
        <item name="android:background">@drawable/edit_text_day</item>
    </style>

    <style name="Button_style_login" parent="Theme.BotonDePanico.NoActionBar">
        <item name="android:background">@color/teal_700</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Button_style_register" parent="Theme.BotonDePanico.NoActionBar">
        <item name="android:background">@color/bluehigh</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="text_color_login" parent="Theme.BotonDePanico.NoActionBar">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="image_back" parent="Theme.BotonDePanico.NoActionBar">
        <item name="android:drawableLeft">@drawable/ic_baseline_west_night</item>
    </style>




    <style name="SplashScreen" parent="Theme.BotonDePanico">
        <item name="android:windowBackground">@drawable/splash_screen_night</item>
    </style>




</resources>